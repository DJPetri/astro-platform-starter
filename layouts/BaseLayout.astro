---
const { title = "Petrievents" } = Astro.props;
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    <button class="sidebar-toggle" aria-label="Menü ein-/ausblenden">
      <img src="/favicon.svg" alt="Menü" />
    </button>

    <div class="layout">
      <aside class="sidebar">
        <div class="sidebar-top">
          <input type="text" placeholder="Suche..." class="sidebar-search" />
        </div>

        <nav class="sidebar-nav">
          <a href="/">Startseite</a>
          <a href="/galerie">Galerie</a>
          <a href="/kontakt">Kontakt</a>
          <a href="/impressum">Impressum</a>
        </nav>

        <div class="sidebar-bottom">
          <img src="/mein-bild.png" alt="Petrievents Logo" />
        </div>
      </aside>

      <main class="main-content">
        <slot />
      </main>
    </div>

    <script>
      const toggle = document.querySelector('.sidebar-toggle');
      const sidebar = document.querySelector('.sidebar');
      toggle.addEventListener('click', () => {
        sidebar.classList.toggle('collapsed');
      });
    </script>
  </body>
</html>
