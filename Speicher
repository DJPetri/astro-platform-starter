
/* === Media Queries für mobile Responsivität === */
@media (max-width: 1024px) {
  /* Für Tablets (768px - 1024px) */
  .layout {
    flex-direction: row; /* Flexbox Layout für Tablet: Sidebar und Hauptinhalt nebeneinander */
  }

  .sidebar {
    width: 200px; /* Verkleinerte Sidebar für Tablets */
  }

  .sidebar-toggle {
    display: none; /* Toggle Button ausblenden auf Tablets */
  }

  .hero h1 {
    font-size: 2rem; /* Kleinere Schrift im Hero-Bereich */
  }

  .hero .subheading {
    font-size: 1.2rem; /* Kleinere Subheading-Schriftgröße */
  }

  .features h2 {
    font-size: 1.3rem;
  }

  .features li {
    font-size: 1rem;
  }
}

@media (max-width: 768px) {
  /* Für mobile Geräte (bis 768px) */
  .layout {
    flex-direction: column; /* Layout ändert sich auf eine vertikale Anordnung */
  }

  /* Sidebar wird bei Mobilgeräten ausgeblendet */
  .sidebar {
    display: none;
  }

  .sidebar-toggle {
    display: block; /* Toggle Button anzeigen für mobile Geräte */
  }

  .hero h1 {
    font-size: 1.8rem; /* Noch kleinere Schrift für den Hero-Text */
  }

  .hero .subheading {
    font-size: 1rem; /* Noch kleinere Subheading-Schriftgröße */
  }

  .features h2 {
    font-size: 1.2rem; /* Noch kleinere Schrift für die Features */
  }

  .features li {
    font-size: 0.9rem; /* Kleinere Schrift für Features */
  }

  .main-content {
    padding: 1rem;
  }

  .grid {
    grid-template-columns: 1fr; /* Galerie wird auf eine Spalte umgestellt */
  }
}