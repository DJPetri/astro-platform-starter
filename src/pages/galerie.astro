---
import BaseLayout from "/layouts/BaseLayout.astro";
---

<BaseLayout title="Galerie | Petrievents">
  <section class="features">
    <h2>Galerie</h2>
    <div class="grid">
      {Array.from({ length: 4 }).map((_, i) => (
        <img src={`/Bilder/bild${i + 1}.jpg`} alt={`Eventbild ${i + 1}`} loading="lazy" />
      ))}
    </div>
  </section>
</BaseLayout>
